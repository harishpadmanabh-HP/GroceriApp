<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Shopowner.Fragments.AddStaffFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Staff"
            android:translationZ="20dp"
            android:textSize="45dp"
            android:fontFamily="@font/monsterregular"
            android:layout_margin="20dp"
            android:textColor="#000"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/staffdp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:translationZ="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#F1EEEE"/>

        <EditText
            android:id="@+id/staffname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/edtcurve"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawablePadding="15dp"
            android:hint="Name"
            android:inputType="textCapCharacters"
            android:padding="20dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18dp"

            android:translationZ="30dp" />

        <EditText
            android:id="@+id/staffphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/edtcurve"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="15dp"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18dp"

            android:translationZ="30dp" />

        <EditText
            android:id="@+id/staffpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/edtcurve"
            android:drawableLeft="@drawable/ic_fiber_pin_black_24dp"
            android:drawablePadding="15dp"
            android:hint="Login PIN"
            android:inputType="numberPassword"
            android:padding="20dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18dp"

            android:translationZ="30dp" />

        <EditText
            android:id="@+id/staffempid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/edtcurve"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:drawablePadding="15dp"
            android:hint="Employee ID"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18dp"

            android:translationZ="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addstaffbtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Staff"
            android:backgroundTint="#00C853"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:textSize="20dp"
            app:cornerRadius="20dp"
            android:fontFamily="@font/raleway"
            android:layout_gravity="right"
            />




    </LinearLayout>
    </ScrollView>

</FrameLayout>